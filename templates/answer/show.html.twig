{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ answer.description }}</td>
            </tr>
            <tr>
                <th>CounterUp</th>
                <td>{{ answer.counterUp }}</td>
            </tr>
            <tr>
                <th>CounterDown</th>
                <td>{{ answer.counterDown }}</td>
            </tr>
            <tr>
                <th>IsConfirm</th>
                <td>{{ answer.isConfirm ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('answer_index') }}">back to list</a>

    <a href="{{ path('answer_edit', {'id': answer.id}) }}">edit</a>

    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}
